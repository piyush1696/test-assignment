<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form class="form-horizontal" name="new-post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4>Add New Post</h4>
        </div>
        <div class="modal-body">
                <div class="form-group">
                <label for="title" class="col-sm-2 control-label">Title <span class="mandotry"> *</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="postTitle" class="form-control" placeholder="Title">
                    </div>
                </div>
                <div class="form-group">
                <label for="title" class="col-sm-2 control-label">Image Url</label>
                    <div class="col-sm-10">
                        <input type="text" name="postImage" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                <label for="title" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="postDescription" placeholder="Description" rows="3"></textarea>
                        <span>Character Left: </span><span class="character-left">260</span>
                    </div>
                </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" id="add-post">Post</button>
        </div>
        </form>
    </div>
</div>
